<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.yutish_pc.idroid.ProfileActivity">

    <ImageView android:layout_height="280dp"
        android:layout_width="match_parent"
        android:src="@drawable/default_image"
        android:id="@+id/imageView2">
    </ImageView>

    <TextView
        android:id="@+id/profile_visit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="Display_username"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profile_visit_sentreq_butt"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_decline_reqbutt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:text="SEND REQUESTS"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/profile_decline_reqbutt"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/profile_visit_sentreq_butt"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:text="DECLINE REQUEST"
        android:textColor="#ffffff" />
</RelativeLayout>
