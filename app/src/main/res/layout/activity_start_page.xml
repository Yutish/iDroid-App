<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.yutish_pc.idroid.StartPageActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="fill_vertical|center_horizontal"
        android:text="iDroid"
        android:textColor="#ffffff"
        android:textSize="45dp" />

    <Button
        android:id="@+id/signinbutt"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="SIGN IN" />

    <Button
        android:id="@+id/alreadytherebutt"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/signinbutt"
        android:layout_below="@+id/signinbutt"
        android:layout_marginTop="66dp"
        android:text="Already there" />
</RelativeLayout>
